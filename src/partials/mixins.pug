mixin pageTitle(title)
  .page-title-wrapper
        h2.title.page-title
          span.title__slash /
          = title

mixin pageSubheader(subheader)
  .page-image-block(class!=attributes.class)
    h2.page-big-title.page-image-block__title= subheader